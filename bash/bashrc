export PS1="[\D{%H:%M:%S}] \u@\h[\j] \w\n$ "

regentags() {
    srcdir=~/src
    outfile=${1:-$srcdir/tags}
    (cd $srcdir && ctags --recurse -o $outfile --exclude="*.(html|css)")
}

findpy() {
    find . \( -name '*.py' -o -name '*.pyx' \) -type f -print0 | xargs -0 grep $@
}

findweb() {
    find . \( -name '*.js' -o -name '*.html' -o -name '*.htm' -o -name '*.css' \) -type f -print0 | xargs -0 grep  $@
}

findeb() {
    find . -name '*.eb' -type f -print0 | xargs -0 grep $@
}

findc() {
    find . \( -name '*.c' -o -name '*.cc' -o -name '*.cxx' -o -name '*.h' -o -name '*.hh' \) -type f -print0 | xargs -0 grep $@
}
